<h1>つぶやき一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>あなたのつぶやき</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to "つぶやき書き換えちゃう？", edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやき消したいの?', post_path(post.id), method: :delete,data: { confirm: 'ほんとに？' }  %></td>
  </tr>
<% end %>
</table>

<%= link_to 'つぶやき投稿へ', new_post_path %>